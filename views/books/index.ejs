<div class="container form-inline">
<h2>Search Book</h2>
<br/>
<form class="form-inline" action="/books" method="GET">
<div class="form-group">
<label class="control-label col-sm-2">Title</label>
<div class="col-sm-3"> 
<input type="text" class="form-control mb-2 mr-sm-2" name="title" value="<%= searchOptions.title %>">
</div>
</div>
<div class="form-group">
<label class="control-label col-sm-5">Published After</label>
<div class="col-sm-3"> 
<input type="date" class="form-control mb-2 mr-sm-2" name="publishedAfter" value="<%= searchOptions.publishedAfter %>">
</div>
</div>
<div class="form-group">
<label class="control-label col-sm-6">Published Before</label>
<div class="col-sm-3"> 
<input type="date" class="form-control mb-2 mr-sm-2" name="publishedBefore" value="<%= searchOptions.publishedBefore %>">
</div>
</div>
<div class="form-group">
<div class="col-sm-3">
<button class="btn btn-primary" type="submit">Search</button>
</div>
</div>
</form>
<br/>
<div class="container">
    <div class="row">
<% books.forEach(book => { %>
    <div class="form-group">
    <div>
        <label class="control-label col-sm-2"><%= book.title %></label>
    </div>
    <div><a href="/books/<%= book.id %>">
    <img height="150" width="100" src="<%= book.coverImagePath %>">
    </a></div>
    </div>
<% }) %>
</div>
</div>
</div>
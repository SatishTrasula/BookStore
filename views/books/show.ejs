<div class="container">
<h2><%= book.title %></h2>

<img src="<%= book.coverImagePath %>" class="rounded">
    <div> Author : <%= book.author.name %></div>
    <div> Publish Date : <%= book.publishDate.toISOString().split('T')[0] %></div>
    <div> Page Count : <%= book.pageCount %></div>
    <div> Description : <%= book.description %></div>
</div>
<div>
    <div><a class="btn btn-primary" href="/books/<%= book.id %>/edit">Edit</a></div>
    
    <%- include('../partials/deleteForm', {url: `/books/${book.id}`}) %>
    <a class="btn btn-info" href="/authors/<%= book.author.id %>">View Author</a>
</div> 
</div>
<div class="form-inline container">
<h2>Search Authors</h2>
<br/>
<form class="form-inline" action="/authors" method="GET">
<label>Name</label>
<div class="form-inline input-group mb-2 mr-sm-2"></div>
<input type="text" class="form-control mb-2 mr-sm-2" name="name" value="<%= searchOptions.name %>">
<button class="btn btn-primary mb-2"type="submit">Search</button>
</div>
</form>
<br>
<table class="table table-striped table-sm">
    <thead>
      <tr>
        <th class="col-sm-6" scope="col">Author</th>
        <th class="col-sm-6 align-center" scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
        <% authors.forEach(author => { %>
            <tr >
            <th><%= author.name %></th>
            <td class="col-sm-6"> <div class="form-inline container row">
                <div class="row">
                <div class="form-group"><div class="col-sm-6"> 
                <a class="btn btn-info" href="/authors/<%= author.id %>" role="button">View</a></div></div>
                <div class="form-group"><div class="col-sm-6"> <a class="btn btn-primary" href="/authors/<%= author.id %>/edit" role=button>Edit</a>
                </div></div>
                <div class="form-group">
                    <div class="col-sm-6"> 
                    <%- include('../partials/deleteForm', { url: `authors/${author.id}`})%>
                    </div>
                </div>
                </div>
                </div></td>
            </div>
            </tr>
        <% }) %>
    </tbody>
</table>
</div>